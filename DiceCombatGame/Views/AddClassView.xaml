<UserControl x:Class="DiceCombatGame.Views.AddClassView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:helpers="clr-namespace:DiceCombatGame.Behaviors"
             xmlns:local="clr-namespace:DiceCombatGame.Views"
             mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="textBlocks" TargetType="TextBlock">
            <Setter Property="Height" Value="25" />
            <Setter Property="Padding" Value="0, 3, 0, 0" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>
        <Style x:Key="textBoxes" TargetType="TextBox">
            <Setter Property="Height" Value="25" />
            <Setter Property="Width" Value="30" />
            <Setter Property="Margin" Value="0, 0, 0, 5" />
            <Setter Property="Padding" Value="0, 2, 0, 0" />
            <Setter Property="TextAlignment" Value="Left" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="helpers:SelectAllTextOnFocus.IsEnabled" Value="True" />
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" Name="Title" />
            <RowDefinition Height="30" Name="FlavorText" />
            <RowDefinition Height="Auto" Name="NewClassInput" />
            <RowDefinition Height="*" Name="ListOfClasses" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
               Content="Add new player class"
               FontSize="16"
               FontWeight="Bold"
               HorizontalAlignment="Center" />

        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
               Content="Make a class, that will be saved to database and usable in the game."
               HorizontalAlignment="Center"
               FontStyle="Italic" />

        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Vertical">
            <TextBlock Text="Class name:" 
                       Margin="0, 0, 5, 0"
                       Style="{StaticResource textBlocks}" />
            <TextBlock Text="Base strength:" 
                       Margin="0, 5, 5, 0"
                       Style="{StaticResource textBlocks}" />
            <TextBlock Text="Base intelligense:" 
                       Margin="0, 5, 5, 0"
                       Style="{StaticResource textBlocks}" />
            <TextBlock Text="Base dexterity:" 
                       Margin="0, 5, 5, 0"
                       Style="{StaticResource textBlocks}" />
        </StackPanel>
 
        <StackPanel Grid.Row="2" Grid.Column="1"
                    Orientation="Vertical">
            <TextBox TabIndex="1" 
                     Name="ClassNameText"
                     Width="100"
                     Text="{Binding ClassModel.Name}"
                     Style="{StaticResource textBoxes}"
                     TextChanged="ClassNameText_TextChanged" />
            <TextBox TabIndex="2"  
                     Text="{Binding ClassModel.Strength}"
                     Style="{StaticResource textBoxes}" />
            <TextBox TabIndex="3" 
                     Text="{Binding ClassModel.Intelligence}"
                     Style="{StaticResource textBoxes}" />
            <TextBox TabIndex="4" 
                     Text="{Binding ClassModel.Dexterity}"
                     Style="{StaticResource textBoxes}" />
            <Button Content="Save class"
                    x:Name="SaveClass"
                    TabIndex="5" 
                    Width="100"
                    HorizontalAlignment="Left"
                    FontWeight="Bold"
                    Margin="0, 10, 0, 5"
                    Click="SaveClass_Click"/>
            <TextBlock Text="Class added to database."
                       Name="ClassAddedText"
                       FontStyle="Italic"
                       Visibility="Hidden" />
        </StackPanel>
        <ListView Name="classesLV"
                  Grid.Row="3"
                  Grid.Column="1"
                  Width="370"
                  HorizontalAlignment="Left"
                  Margin="0, 10, 0, 0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock Text="Name: " />
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                        <TextBlock Text=", " />
                        <TextBlock Text="Strength: " />
                        <TextBlock Text="{Binding Strength}" FontWeight="Bold" />
                        <TextBlock Text=", " />
                        <TextBlock Text="Intelligence: " />
                        <TextBlock Text="{Binding Intelligence}" FontWeight="Bold" />
                        <TextBlock Text=", " />
                        <TextBlock Text="Dexterity: " />
                        <TextBlock Text="{Binding Dexterity}" FontWeight="Bold" />
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid> 
</UserControl>
